<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.controltime">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ControlTime">
        <activity
            android:name=".Activity_ValidarHorario"
            android:label="@string/title_activity__validar_horario"
            android:theme="@style/Theme.ControlTime.NoActionBar"></activity>
        <activity android:name=".Activity_Informe" />
        <activity android:name=".Activity_ModificarFichaje" />
        <activity android:name=".Activity_Validar" />
        <activity android:name=".Activity_Configuracion" />
        <activity android:name=".Activity_VerFichaje" />
        <activity android:name=".Activity_Permiso" />
        <activity android:name=".Activity_fichaje" />
        <activity android:name=".Activity_MenuPrincipal" />
        <activity android:name=".Activity_ResetPassword" />
        <activity android:name=".Activity_InsertUser" />
        <activity android:name=".Activity_Main" />
        <activity android:name=".Activity_Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MyFirebaseMessaging"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>
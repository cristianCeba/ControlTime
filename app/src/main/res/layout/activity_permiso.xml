<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PermisoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".PermisoActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"

            android:textAlignment="center">

            <TextView
                android:id="@+id/edtUsuarioApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:background="@color/colorEditTextNormal"
                android:text="usuario"
                android:textColor="@color/white"
                android:textSize="14sp">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:textAlignment="center">


            <ImageButton
                android:id="@+id/btnPermiso"
                android:layout_width="157dp"
                android:layout_height="38dp"
                android:background="@drawable/permiso">

            </ImageButton>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorEditTextNormal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PETICION"
                android:textColor="@color/white"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:textAlignment="center">

            <EditText
                android:id="@+id/edtFechaDesde"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:hint="01/01/2021"
                android:inputType="date"
                android:textSize="14sp">

            </EditText>

            <EditText
                android:id="@+id/edtFechaHasta"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:hint="31/12/2021"
                android:inputType="date"
                android:textSize="14sp">

            </EditText>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lySolicitar"
            android:layout_width="match_parent"
            android:layout_height="77dp"

            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chkMedioDia"
                android:layout_width="110dp"
                android:layout_height="63dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:text="Medio día"
                android:textSize="14sp"
                ></CheckBox>

            <LinearLayout

                android:layout_width="164dp"
                android:layout_height="63dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textTipoPer"
                    android:layout_width="107dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Tipo permiso"
                    android:textSize="14sp"
                     />

                <Spinner
                    android:id="@+id/spnTipoPermiso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ></Spinner>


            </LinearLayout>

            <ImageButton
                android:id="@+id/btnValidar"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btnvalida"
                >


            </ImageButton>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/lyConsulta"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorEditTextNormal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONSULTA"
                android:textColor="@color/white"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#F7DA38"></Button>

            <TextView
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:text="Vacaciones"></TextView>

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#B027A9"></Button>

            <TextView
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:layout_marginTop="0dp"
                android:text="Enfermedad"></TextView>

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#2759B0"></Button>

            <TextView
                android:layout_width="98dp"
                android:layout_height="35dp"
                android:layout_marginTop="0dp"
                android:text="Fallecimiento F."></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#FF5722"></Button>

            <TextView
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text="Hospitalización F."></TextView>

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#4CAF50"></Button>

            <TextView
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginTop="0dp"
                android:text="Boda"></TextView>

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#B07227"></Button>

            <TextView
                android:layout_width="98dp"
                android:layout_height="30dp"
                android:layout_marginTop="0dp"
                android:text="Boda F."></TextView>
        </LinearLayout>

        <sun.bob.mcalendarview.MCalendarView

            android:id="@+id/calendar"
            style="@style/CardView"
            android:layout_width="371dp"
            android:layout_height="383dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"></sun.bob.mcalendarview.MCalendarView>


        <!--  <CalendarView
             android:id="@+id/calendar"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintHorizontal_bias="0.491"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintVertical_bias="0.134" />

 -->
    </LinearLayout>







</LinearLayout>